@using TimetrackerWebApp.ViewModels
@model TaskItemViewModel

<form asp-action="AddTaskItem" role="form">
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Name" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Category" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StartDateTime" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="StartDateTime" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EndDateTime" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="EndDateTime" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>  